@inherits LayoutComponentBase
@inject IStringLocalizer<MainLayout> Localization
@inject IJSRuntime JsRuntime

<header class="mb-auto">
    <nav class="navbar">
        <div class="container-fluid">
            <a class="navbar-brand text-light float-md-start mb-0 py-1 px-0 fs-4" href="">
                <img src="images/graduated.png" class="pe-2" alt="Bootstrap" height="50">
                RoK Academy
            </a>
            <div class="nav nav-masthead justify-content-center float-md-end">
                <NavLink class="nav-link py-1 px-0" href=""><i class="fa-solid fa-graduation-cap"></i> @Localization["Q&A"]</NavLink>
            </div>
        </div>
    </nav>
</header>

<main class="px-3">
    @Body
</main>

<footer class="px-3 mt-auto text-white-50">
    <div class="d-flex flex-wrap justify-content-start justify-content-lg-center">
        <div class="align-self-center">
            <span class="d-md-inline d-block">@Localization["Footer"] <a href="https://www.lilith.com/" class="fw-semibold text-white">Lilith Games</a>.</span>
            <span class="d-md-inline d-block">Rise of Kingdoms &copy; @todaysDate.Year</span>
        </div>
        <div class="ms-auto">
            <LanguageSelector />
        </div>
    </div>
</footer>

@code {
    private DateOnly todaysDate;
    private Task<IJSObjectReference>? tooltipModule;

    public Task<IJSObjectReference> TooltipModule =>
        tooltipModule ??= JsRuntime.InjectJsObjectReference("import", "./js/tooltip.js");

    protected override async Task OnInitializedAsync()
    {
        todaysDate = DateOnly.FromDateTime(DateTime.Now);

        IJSObjectReference module = await TooltipModule;
        await module.InvokeVoidAsync("initTooltips");

        await base.OnInitializedAsync();
    }
}