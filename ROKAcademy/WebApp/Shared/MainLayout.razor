@inherits LayoutComponentBase
@inject IStringLocalizer<MainLayout> Localization

<header class="mb-auto">
    <nav class="navbar">
        <div class="container-fluid">
            <a class="navbar-brand text-light float-md-start mb-0 py-1 px-0" href="">
                <img src="images/unnamed.jpg" alt="Bootstrap" height="50">
                RoK Academy
            </a>
            <div class="nav nav-masthead justify-content-center float-md-end">
                <NavLink class="nav-link fw-bold py-1 px-0" href="">@Localization["Q&A"]</NavLink>
            </div>
        </div>
    </nav>
</header>

<main class="px-3">
    @Body
</main>

<footer class="mt-auto text-white-50">
    <div class="d-flex flex-wrap justify-content-start justify-content-lg-center">
        <div class="p2 align-self-center">
            <span class="d-sm-inline d-block">@Localization["Footer"] <a href="https://www.lilith.com/" class="text-white">Lilith Games</a>.</span>
            <span class="d-sm-inline d-block">Rise of Kingdoms &copy; @todaysDate.Year</span>
        </div>
        <div class="p-2 ms-auto">
            <LanguageSelector />
        </div>
    </div>
</footer>

@code {
    private DateOnly todaysDate;

    protected override void OnInitialized()
    {
        todaysDate = DateOnly.FromDateTime(DateTime.Now);

        base.OnInitialized();
    }
}